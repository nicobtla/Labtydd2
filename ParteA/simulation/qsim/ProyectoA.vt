`timescale 1 ps/ 1 ps
module partea_vlg_sample_tst(
	sw1,
	sw2,
	sampler_tx
);
input  sw1;
input  sw2;
output sampler_tx;

reg sample;
time current_time;
always @(sw1 or sw2)
                                                                                
begin                                                 
 if ($realtime > 0)                                   
 begin                                                
	if ($realtime == 0 || $realtime != current_time)  
	begin									          
		if (sample === 1'bx)                          
			sample = 0;                               
		else                                          
			sample = ~sample;                         
	end										          
	current_time = $realtime;					      
 end                                                  
end                                                   

assign sampler_tx = sample;
endmodule

module partea_vlg_check_tst (
	led,
	sampler_rx
);
input  led;
input sampler_rx;

reg  led_expected;

reg  led_prev;

reg  led_expected_prev;

reg  last_led_exp;

reg trigger;

integer i;
integer nummismatches;

reg [1:1] on_first_change ;


initial
begin
trigger = 0;
i = 0;
nummismatches = 0;
on_first_change = 1'b1;
end

// update real /o prevs

always @(trigger)
begin
	led_prev = led;
end

// update expected /o prevs

always @(trigger)
begin
	led_expected_prev = led_expected;
end



// expected led
initial
begin
	led_expected = 1'bX;
end 
// generate trigger
always @(led_expected or led)
begin
	trigger <= ~trigger;
end

always @(posedge sampler_rx or negedge sampler_rx)
begin
`ifdef debug_tbench
	$display("Scanning pattern %d @time = %t",i,$realtime );
	i = i + 1;
	$display("| expected led = %b | ",led_expected_prev);
	$display("| real led = %b | ",led_prev);
`endif
	if (
		( led_expected_prev !== 1'bx ) && ( led_prev !== led_expected_prev )
		&& ((led_expected_prev !== last_led_exp) ||
			on_first_change[1])
	)
	begin
		$display ("ERROR! Vector Mismatch for output port led :: @time = %t",  $realtime);
		$display ("     Expected value = %b", led_expected_prev);
		$display ("     Real value = %b", led_prev);
		nummismatches = nummismatches + 1;
		on_first_change[1] = 1'b0;
		last_led_exp = led_expected_prev;
	end

	trigger <= ~trigger;
end
initial 

begin 
$timeformat(-12,3," ps",6);
#1000000;
if (nummismatches > 0)
	$display ("%d mismatched vectors : Simulation failed !",nummismatches);
else
	$display ("Simulation passed !");
$finish;
end 
endmodule

module partea_vlg_vec_tst();
// constants                                           
// general purpose registers
reg sw1;
reg sw2;
// wires                                               
wire led;

wire sampler;                             

// assign statements (if any)                          
partea i1 (
// port map - connection between master ports and signals/registers   
	.led(led),
	.sw1(sw1),
	.sw2(sw2)
);

// sw1
always
begin
	sw1 = 1'b0;
	sw1 = #50000 1'b1;
	#50000;
end 

// sw2
always
begin
	sw2 = 1'b0;
	sw2 = #100000 1'b1;
	#100000;
end 

partea_vlg_sample_tst tb_sample (
	.sw1(sw1),
	.sw2(sw2),
	.sampler_tx(sampler)
);

partea_vlg_check_tst tb_out(
	.led(led),
	.sampler_rx(sampler)
);
endmodule

